<center>
  <b><%= format_long_filenames(@asset.filename, 30)  %></b> <small>(<%= @asset.size %> bytes)</small>
</center>

<ul style="list-style-type: none;">
  <% if @asset.docx? %>
    <% ['doc', 'pdf', 'odt', 'txt', 'rtf'].each do |format| %>
      <li><%= link_to format_filename(@asset, format), convert_asset_path(@asset, :format=>format.to_sym), :method => :post %></li>
    <% end %>
  <% elsif @asset.xlsx? %>
    <% ['xls', 'csv', 'pdf', 'ods'].each do |format| %>
      <li><%= link_to format_filename(@asset, format), convert_asset_path(@asset, :format=>format.to_sym), :method => :post %></li>
    <% end %>
  <% elsif @asset.pptx? %>
    <% ['ppt', 'odp', 'pdf'].each do |format| %>
      <li><%= link_to format_filename(@asset, format), convert_asset_path(@asset, :format=>format.to_sym), :method => :post %></li>
    <% end %>
  <% elsif @asset.doc? %>
    <% ['odt', 'docx'].each do |format| %>
      <li><%= link_to format_filename(@asset, format), convert_asset_path(@asset, :format=>format.to_sym), :method => :post %></li>
    <% end %>
  <% elsif @asset.xls? %>
    <% ['ods', 'xlsx'].each do |format| %>
      <li><%= link_to format_filename(@asset, format), convert_asset_path(@asset, :format=>format.to_sym), :method => :post %></li>
    <% end %>
  <% end %>
                            
</ul>
<br>
<center><%= link_to 'Permalink', asset_path(@asset, :token => @asset.auth_token.token) %></center>
