<table width="100%" class="grid">
  <tr>
    <th>Filename</th>
    <th>Content-type</th>
    
    <th>Size (bytes)</th>
    
    <th>&nbsp;</th>
  </tr>
  
  <% form_tag admin_assets_path, :method => :get do %>
    <tr>    
      <th><input type=text name="asset[filename]"></input></th>
      <th></th>
      <th></th>
      
      <th><button>Filter</button></th>
    </tr>
  <% end %>
  
  <% @assets.each do |asset| %>
    <tr class="<%= cycle('odd', 'even')  %>" >
      <td align=right><%= asset.filename[0..30] %></td>
      <td><%= asset.content_type %></td>
      
      <td><%= asset.size %></td>
      <td><%= link_to 'download', download_admin_asset_path(asset) %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate(@conversions) %>